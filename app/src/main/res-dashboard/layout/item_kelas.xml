<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium_margin">

    <com.wawakaka.jst.base.view.DefaultTextView
        android:id="@+id/guru_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textColor="@color/black"
        android:textSize="@dimen/large_font_size"
        app:layout_constraintBottom_toTopOf="@+id/sekolah_kelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wawakaka.jst.base.view.DefaultTextView
        android:id="@+id/bidang_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invalid_data"
        android:textColor="@color/black"
        android:textSize="@dimen/large_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wawakaka.jst.base.view.DefaultTextView
        android:id="@+id/sekolah_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/kelas_sekolah"
        android:textColor="@color/black"
        android:textSize="@dimen/large_font_size"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guru_kelas"
        tools:visibility="visible" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@color/light_grey"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sekolah_kelas" />

</android.support.constraint.ConstraintLayout>