<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonTextColor" format="color" />
        <attr name="buttonBackground" format="reference" />
        <attr name="progressColor">
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
        </attr>
        <attr name="buttonImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float" />
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ErrorView">
        <attr name="imageDrawable" format="reference" />
        <attr name="imageWidth" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="imageHeight" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="imageAspectRatio" format="float" />
        <attr name="imageAspectRatioEnabled" format="boolean" />
        <attr name="imageDominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
        <attr name="description" format="string" />
        <attr name="action" format="string" />
        <attr name="elementVerticalMargin" format="dimension" />
    </declare-styleable>

</resources>