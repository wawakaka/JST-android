<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wawakaka.jst.login.composer.LoginActivity">

    <com.wawakaka.jst.base.view.ProgressButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:elevation="2dp"
        app:buttonBackground="@drawable/button_background"
        app:buttonImage="@drawable/google_plus"
        app:buttonText="google +"
        app:buttonTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:progressColor="light" />

</android.support.constraint.ConstraintLayout>
