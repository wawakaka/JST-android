<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wawakaka.jst.tesHarian.composer.TesHarianActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:theme="@style/ToolbarStyle">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <com.wawakaka.jst.base.view.BoldTextView
                    android:id="@+id/toolbar_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:gravity="center_vertical"
                    android:text="@string/daily_test_title"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/siswa_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/medium_margin">

            <com.wawakaka.jst.base.view.DefaultTextView
                android:id="@+id/daily_test_file_title"
                style="@style/SubTitleTextStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/daily_test_file_empty" />

            <com.wawakaka.jst.base.view.DefaultTextView
                android:id="@+id/daily_test_file_size"
                style="@style/DefaultTextStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:gravity="end"
                android:text="@string/daily_test_file_size" />

            <com.wawakaka.jst.base.view.BoldButton
                android:id="@+id/daily_test_download_button"
                style="@style/DailyTestButtonStyles"
                android:text="@string/daily_test_download_button"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.wawakaka.jst.base.view.BoldButton
                android:id="@+id/daily_test_upload_button"
                style="@style/DailyTestButtonStyles"
                android:text="@string/daily_test_upload_button" />

            <com.wawakaka.jst.base.view.BoldButton
                android:id="@+id/daily_test_view_result_button"
                style="@style/DailyTestButtonStyles"
                android:text="@string/daily_test_add_or_view_test_result" />

        </LinearLayout>

    </ScrollView>

    <com.wawakaka.jst.base.view.ErrorView
        android:id="@+id/unknown_error_view"
        style="@style/UnknownErrorStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.wawakaka.jst.base.view.ErrorView
        android:id="@+id/network_error_view"
        style="@style/NetworkErrorStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.wawakaka.jst.base.view.ErrorView
        android:id="@+id/result_empty_error_view"
        style="@style/NetworkErrorStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.wawakaka.jst.base.view.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/disabled_transparent_color"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>
